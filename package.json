{
  "name": "jstrings-localization",
  "version": "2.0.0",
  "description": "localization based on jstrings files",
  "main": "lib/Localization.cls.js",
  "scripts": {
    "test": "mocha test/tests-node.js",
    "test-browser": "node test/test-web.js &",
    "halt-browser": "kill `ps -e -o pid,command | grep test-web.js | head -1 | grep -oP '\\d+'`",
    "start": "nsrun test-browser",
    "stop": "npm run halt-browser",
    "cover-local": "istanbul cover _mocha test/tests-node.js",
    "cover": "istanbul cover _mocha test/tests-node.js --report lcovonly",
    "coveralls": "npm run-script cover && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guitarneck/jstrings-localization.git"
  },
  "keywords": [
    "javascript",
    "localisation",
    "i18n",
    "node.js",
    "browser",
    "localization",
    "jstrings",
    "strings"
  ],
  "author": "Laurent STEFAN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guitarneck/jstrings-localization/issues"
  },
  "homepage": "https://github.com/guitarneck/jstrings-localization#readme",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-jsdoc3": "^1.0.1",
    "gulp-order": "^1.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "opener": "^1.4.3"
  }
}
